{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "!*.log",
        "!.gradle",
        "!build",
        "!.nuxt",
        "!.output",
        "!.turbo"
      ],
      "outputs": ["dist/**", "public/_nuxt-styles/**", "showCase/**","gen-docs/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "inputs": [
        "**/*.{ts,tsx,js,jsx,vue,json,md,yml,yaml}",
        ".prettierrc.*",
        "../.prettierrc.*",
        "package.json"
      ],
      "outputs": [],
      "cache": true
    },
    "checkFormat": {
      "inputs": [
        "**/*.{ts,tsx,js,jsx,vue,json,md,yml,yaml}",
        ".prettierrc.*",
        "../.prettierrc.*",
        "package.json"
      ],
      "outputs": [],
      "cache": true
    },
    "test-ci": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    },
    "e2e": {
      "outputs": [],
      "cache": true
    }
  }
}
{
  "name": "@mswertz/emx2-styleguide",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service styleguidist",
    "build": "vue-cli-service build --target lib --name @mswertz/emx2-styleguide src/index.js",
    "lint": "vue-cli-service lint",
    "format": "vue-cli-service lint --fix",
    "styleguide": "vue-cli-service styleguidist",
    "styleguide:build": "vue-cli-service styleguidist:build"
  },
  "main": "./dist/@mswertz/emx2-styleguide.common.js",
  "dependencies": {
    "core-js": "3.8.3",
    "graphql": "15.5.0",
    "graphql-request": "3.4.0",
    "object-path": "0.11.5",
    "recursive-iterator": "3.3.0",
    "v-click-outside": "3.1.2",
    "vue": "2.6.12",
    "vue-flatpickr-component": "9.0.3",
    "vuedraggable": "2.24.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "4.5.11",
    "@vue/cli-plugin-eslint": "4.5.11",
    "@vue/cli-service": "4.5.11",
    "@vue/eslint-config-prettier": "6.0.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.18.0",
    "eslint-plugin-autofix": "1.0.3",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-vue": "7.5.0",
    "prettier": "2.2.1",
    "vue-cli-plugin-styleguidist": "4.35.0",
    "vue-template-compiler": "2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "plugins": [
      "autofix"
    ],
    "rules": {
      "autofix/no-debugger": "error"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
